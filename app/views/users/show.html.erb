<h3>My Account</h3>
<div class="w3-center w3-card">
  <p>Name: <%= @user.full_name if @user.first_name %></p>
  <p>Email: <%= @user.email if @user.email %></p>
  <% if current_user.admin? %>
    <%= link_to "Manage Users", users_path, class: "w3-grey w3-center w3-button" %>
    <p></p>
    <!-- temporary location for the countdown button -->
    <%= button_to("Begin Countdown", countdowns_path, params: {purchased_game_id: 1}, class: "w3-grey w3-center w3-button" ) %>
  <% end %><br>
  <%= link_to "Update My Account Information", edit_user_path(current_user) %>
</div>
<div>
  <ul>
  <% @orders.each do |order| %>
    <div class="w3-card">
      <p>Total amount: <%= number_to_currency(order.total/100) %></p>
      <p>Purchased on <%= order.purchased_at.to_formatted_s(:month_day_comma_year) + " at " + order.purchased_at.to_formatted_s(:time_am_pm) if order.purchased_at %></p>
      <ul>
        <% order.games.each do |game| %>
          <p><%= link_to game.title, game_path(game) %></p>
          <!-- countdown button will go here -->
        <% end %>
      </ul>
    </div>
  <% end %>
  </ul>
</div>
