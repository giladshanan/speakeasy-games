<div>
  <h1><%= @game.title %></h1>
  <%= form_tag(orders_path) do %>
    <%= hidden_field_tag 'game_id', @game.id %>
    <div><%= submit_tag 'Add to Cart' %></div>
  <% end %>
  <h2>About the game:</h2>
  <p><%= @game.teaser %></p>
  <h2>What's Included: </h2>
  <p><%= @game.included %></p>
  <h2>What's Not Included: </h2>
  <p><%= @game.not_included %></p>
  <h2>Moderator Difficulty Level: </h2>
  <p><%= @game.difficulty %></p>
  <h2>Moderator Notes: </h2>
  <p><%= @game.notes %></p>
  <h2>Photos</h2>
  <% @game.photos.each do |photo| %>
    <%= image_tag(photo.img.url(:medium)) %>
  <% end %>
</div>
